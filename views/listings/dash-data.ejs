<% layout("/layouts/boilerplate") %>


<body>
  <section id="about-us" style="padding: 80px 20px 40px; background-color: #f9f9f9;">
    <div class="container">
      <h1 class="text-center" id="page1">
        Welcome to 
        <span class="inner">BookNHost!</span>
      </h1>
      <p class="text-center" id="page-1">
