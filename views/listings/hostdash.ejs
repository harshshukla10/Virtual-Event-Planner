<% layout("/layouts/boilerplate") %>
<body>
    <main>

        <h2 class="text-center">Join Us </h2>
        <h4 class="text-center">We are excited to have you on board! Our platform allows you to showcase your planners and connect with customers.</h4>
        <div class="container mt-5">
            <div id="carouselExampleIndicators" class="carousel slide rounded shadow" data-bs-ride="carousel" style="max-width: 900px; margin: auto; margin-top: 0px;">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="https://www.talk-business.co.uk/wp-content/uploads/2017/12/shutterstock_704922259-632x422.jpg" class="d-block w-100 rounded" style="height: 400px; object-fit: cover;" alt="Infrastructure 1">
                    </div>
                    <div class="carousel-item">
                        <img src="https://adamchristing.com/wp-content/uploads/2023/07/people-talking-at-a-business-event-drinking-juice-community-event-ideas-local-businesses-community-building-community-members-community-event-corporate-event-communi.jpg" class="d-block w-100 rounded" style="height: 400px; object-fit: cover;" alt="Infrastructure 2">
                    </div>
                    <div class="carousel-item">
                        <img src="https://uschamber-co.imgix.net/https%3A%2F%2Fs3.us-east-1.amazonaws.com%2Fco-assets%2Fassets%2Fimages%2Fsmb-corporate-event.jpg?auto=compress%2Cformat&crop=focalpoint&fit=crop&fp-x=0.7668&fp-y=0.4213&h=415&q=88&w=622&s=a975ef30695a82e69b5f75b92363a0b9" class="d-block w-100 rounded" style="height: 400px; object-fit: cover;" alt="Infrastructure 3">
                    </div>
                </div>
        
                <!-- Controls -->
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon bg-dark rounded-circle p-2" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon bg-dark rounded-circle p-2" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        
        
        <!-- Main Content Section -->
        <div class="container my-5">
           
            <p class="text-center">Share your experiences, post updates, and let your customers know what you are working on!</p>
            
            <h3 class="text-center">Get Started</h3>
            <div class="text-center">
                <a href="/hostSignup" class="btn btn-primary btn-lg">SignUp as HOST</a>
            </div>
        
            <h3 class="text-center mt-5">Why Share Your Planners?</h3>
            <ul class="list-group">
                <li class="list-group-item">Build trust with your customers.</li>
                <li class="list-group-item">Showcase your capabilities and projects.</li>
                <li class="list-group-item">Engage with your audience and receive feedback.</li>
            </ul>
        </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</main>
</body>